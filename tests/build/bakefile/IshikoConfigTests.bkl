ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/configuration/include/Ishiko/Configuration.bkl;
import $(ishikopath)/test-framework/include/Ishiko/TestFramework/Core.bkl;

toolsets = gnu vs2019 vs2017 vs2015 vs2013;

gnu.makefile = ../gnumake/GNUmakefile;
vs2019.solutionfile = ../vc16/IshikoConfignTests.sln;
vs2017.solutionfile = ../vc15/IshikoConfignTests.sln;
vs2015.solutionfile = ../vc14/IshikoConfigTests.sln;
vs2013.solutionfile = ../vc12/IshikoConfigTests.sln;

program IshikoConfigTests : IshikoConfiguration, IshikoTestFrameworkCore
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoTestFrameworkCore IshikoConfig IshikoProcess IshikoText IshikoErrors boost_filesystem boost_system;
    }

    headers
    {
        ../../src/CommandLineParserTests.h
        ../../src/CommandLineSpecificationTests.h
    }

    sources
    {
        ../../src/CommandLineParserTests.cpp
        ../../src/CommandLineSpecificationTests.cpp
        ../../src/main.cpp
    }
}
